<Location /classes>
#
# You may wish to limit access to printers and classes, either with Allow
# and Deny lines, or by requiring a username and password.
#
Order Deny,Allow
Deny From All
Allow From 127.0.0.1
{
    foreach (@trustedHosts){
        $OUT .= "Allow From $_\n";
    }
}
AuthType Basic
AuthClass User
Satisfy any
</Location>

